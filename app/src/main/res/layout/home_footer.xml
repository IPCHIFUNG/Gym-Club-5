<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_discovery"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="1dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_training_plan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="训练计划"
                android:textColor="#0d0c0c"/>

            <ImageView
                android:id="@+id/iv_dli"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@mipmap/plan"/>

            <TextView
                android:id="@+id/tv_make_plan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="定制塑形计划"
                android:textColor="#0d0c0c"/>

            <TextView
                android:id="@+id/tv_plan_introduction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="根据你的评估结果，为你推荐[塑形计划]。现在开始规律地训练，你将在4周后见证改变。"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:text="@string/no_more_information" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#fff"/>

</LinearLayout>